# Development Dockerfile for Spring Boot with watch mode
FROM eclipse-temurin:21-jdk-alpine AS development

# Install dependencies for watch mode
RUN apk add --no-cache curl

# Create spring user
RUN addgroup -g 1001 -S spring && \
    adduser -u 1001 -S spring -G spring

WORKDIR /app

# Copy Maven wrapper and dependencies
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Make Maven wrapper executable
RUN chmod +x ./mvnw

# Download dependencies (cached layer)
RUN ./mvnw dependency:go-offline -B

# Copy source code with proper ownership
COPY --chown=spring:spring src src

# Switch to spring user
USER spring

EXPOSE 8080

# Development command with Spring Boot DevTools
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.profiles=dev"]
